  "related_applications": [
    {
      "platform": "web",
      "url": "https://baileywright617.github.io/personal-finance-tracker/"
    }
  ],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "file_handlers": [
    {
      "action": "./import",
      "accept": {
        "text/csv": [".csv"],
        "application/json": [".json"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+finance",
      "url": "./?action=%s"
    }
  ]
}